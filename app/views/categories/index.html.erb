<h1>Liste categories</h1>

<br>

<div class="container">         
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.nom %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Voir', category %></td>
        <td><%= link_to 'Modifier', edit_category_path(category) %></td>
        <td><%= link_to 'Supprimer', category, method: :delete, data: { confirm: 'Sur de supprimer ?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
